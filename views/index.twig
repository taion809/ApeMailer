{% verbatim %}
<html ng-app="apeMailer">
    <head>
        <title>ApeMailer</title>
        <link type="text/css" rel="stylesheet" href="/assets/css/bootstrap.min.css" />
        <link type="text/css" rel="stylesheet" href="/assets/css/sidebar.css" />
        <link type="text/css" rel="stylesheet" href="/assets/css/override.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.5/angular.min.js"></script>
        <script src="/assets/js/controllers.js"></script>
    </head>
    <body ng-controller="EmailDashboard">
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"><a href="/">ApeMailer</a></li>
                <li><a href="#">Dashboard</a></li>
                <li><a href="https://twitter.com/redstalker_nick">Contact</a></li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="content-header">
                <h1>ApeMailer</h1>
            </div>
            <div class="page-content inset">
                <div class="row">
                    <div class="col-md-12">
                        <p class="lead">
                            Simple GuerrillaMail client.
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <input id='username' class="form-control" type="text" ng-model="user.username" />
                    </div>
                    <div class="col-md-2">
                        <select id="domain" class="form-control" name="domain" ng-model="domain" ng-options="domain.id as domain.host for domain in domain_list">
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-sm btn-block btn-primary" ng-click="setEmail()">Go!</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <th><span class="glyphicon glyphicon-check"></span> Select</th>
                                <th>From</th>
                                <th>Subject</th>
                                <th>Date</th>
                            </thead>
                            <tr ng-repeat="email in email.list">
                                <td><input type="checkbox" /></td>
                                <td><span ng-bind="email.mail_from"></span></td>
                                <td><span ng-bind="email.mail_subject"></span></td>
                                <td><span ng-bind="email.mail_date"></span></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>
{% endverbatim %}